<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="@dimen/dp_80">

    <LinearLayout
        android:id="@+id/ll_atvt_baset_time_price"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"

        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--设置说明-->
            <LinearLayout

                android:padding="@dimen/dp_10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--时段设置-->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_atvt_baset_time_price_begin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="09:30"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="--"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_atvt_baset_time_price_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="11:30"
                        android:textColor="@color/text_dark"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
                <!--预约项目及价格折扣设置-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_atvt_baset_time_price_item_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="15个项目单独定价"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="所有项目预约价为原价的"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_atvt_baset_time_price_item_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=" 10%"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_chevron_right_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_atvt_baset_time_price_item_delete"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="#D3D3D3"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffaa00" />
    </LinearLayout>



</LinearLayout>